<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="at.fhooe.mc.android">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS"/>
    <uses-permission android:name="android.permission.READ_PROFILE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_menu_moreoverflow_normal_holo_dark"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppStart">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".client_register"
            android:label="@string/title_activity_client_register"/>
        <activity
            android:name=".client_lobby"
            android:label="@string/title_activity_client_lobby"/>
        <activity android:name=".create_or_join"/>
        <activity android:name=".client_question">
        </activity>
        <activity android:name=".client_guess">
        </activity>
    </application>

</manifest>